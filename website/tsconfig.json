{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES6",
    ],
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src/**/*.ts",
  ]
}